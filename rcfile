{
  function fSetMacros()
    if gPreset == "TurnCount" then
      crawl.setopt("macros+= M \\{F1} zG")
      crawl.setopt("macros+= M \\{F3} F*")
    end

    if gPreset ~= "RealTime" then
      crawl.setopt("macros+= M < ===safe_upstairs")
    end
  end
}
